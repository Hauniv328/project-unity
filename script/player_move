using UnityEngine;

public class move : MonoBehaviour
{
    public GameObject player; //public은 접근 지정자(모든 곳에서 접근 허용)
    public GameObject bullet;

    void Start() { //시작시 1회 호출
        InvokeRepeating("attack", 0f, 0.5f);
    }
    void Update() { //프레임 하나당 1회 호출(호출 = fps)
        move_();
    }

    void move_() {
        if(Input.GetKey(KeyCode.A)) {
            Vector2 v = new Vector2(-5, 0);
            player.transform.Translate(v * Time.deltaTime);
        }

        if(Input.GetKey(KeyCode.D)) {
            Vector2 v = new Vector2(5, 0);
            player.transform.Translate(v * Time.deltaTime); //Time.deltatime은 fps 차이 보정
        }
    }

    void attack() {
        Instantiate(bullet); //오브젝트 생성 함수
    }
}
